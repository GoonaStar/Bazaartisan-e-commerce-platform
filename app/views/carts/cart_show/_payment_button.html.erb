<div class="add-listing-section w-100 padding-bottom-0" style="margin-bottom: 35px">
  <div class="add-listing-headline margin-bottom-0  d-flex justify-content-center ">

    <!-- Stripe script permitting payment and creating order -->
    <script src="https://checkout.stripe.com/checkout.js" 
      class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-description="Order of <%= @cart_item.title %>"
      data-amount="<%= (@cart_item.price) * 100 %>"
      data-currency="$"   
      data-locale="auto"
      data-label="Confirm"
      method='create'>

    </script>
    <br>

  </div>
</div>