<!-- Titlebar -->
<div id="titlebar">
	<div class="row">
		<div class="col-md-12">
			<h2>Mes annonces</h2>
			<!-- Breadcrumbs -->
			<nav id="breadcrumbs">
				<ul>
    				<li><%= link_to "Accueil", root_path %></li>
					<li><%= link_to "Mon profil", user_path(current_user.id) %></li>
					<li><%= link_to "Mes annonces" %></li>
				</ul>
			</nav>
		</div>
	</div>
</div>



<!-- Tabs corresponding to each item status -->
<ul>
	<% @item_status.each do |status, french_status| %>
	  	<li class="profile-section-tabs"><a id=<%= 'item-'+status %> href=<%= '#item-'+status %> >
	  		<%= french_status %>
  		</a></li>
	<% end %>
</ul>

<!-- Tab contents -->

		<div class="dashboard-list-box margin-top-0">
			<ul>
			<% @user_sales.each do |item| %>
				<li class=<%= item.status %> >
					<div class='list-box-listing'>
						<div class="list-box-listing-img">
							<a>
							 <% if item.item_images.attached? %>
                                <%= image_tag @item.item_images[0].variant(resize: "200x200") %>
                            <% elsif item.Faker_image.nil? %>
                                <%= image_tag '/assets/generique/no-image.jpg' %>
                            <% else %>
                                <%= image_tag ('/assets/image_seed/' + item.Faker_image)%>
                            <% end %>
                        	</a>
                    	</div>
						<div class='list-box-listing-content'>
							<div class='inner'>
								<h3><%= item.title %></h3>
								<span><%= item.category.category_name %></span><br/>
								<span><%= item.price %> â‚¬</span>
							</div>
						</div>
						<div class="buttons-to-right">
							<%= link_to edit_item_path(item.id), class:'button gray' do %><i class="fa fa-edit"></i> Editer<% end %>
							<%= link_to new_item_path, class:'button gray' do %><i class="fa fa-clone"></i> Dupliquer<% end %>
						</div>
					</div>
				</li>
			<% end %>
					
			</ul>
		</div>
