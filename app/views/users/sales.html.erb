<% title('Mes annonces - KraftMarket') %>

<div class='padding-top-0' id='dashboard'>

	<!-- Tabs to display profile section -->
	<%= render 'users/private_profile/profile_tabs' %>

  	<div class="dashboard-content private-profile">

		<!-- Tab-content displaying items owned by the user -->
		<div class='profile-tab-content' id="seller" >
			<!-- Titlebar -->
			<div id="titlebar">
				<div class="row">
					<div class="col-md-12">
						<h2>Mes annonces</h2>
						<hr>
						<!-- Breadcrumbs -->
						<nav id="breadcrumbs">
							<ul>
			    				<li><%= link_to "Accueil", root_path %></li>
								<li><%= link_to "Mon profil", user_path(current_user.id) %></li>
								<li><%= link_to "Mes annonces" %></li>
							</ul>
						</nav>
					</div>
				</div>
			</div>

			<div class="col-md-12">
				<div class="style-2">
					<!-- Tabs Navigation -->
					<ul class="tabs-nav" id='public-profile-tabs'>
						<li><a href="#published"><i class="fas fa-eye"></i></i> En ligne <span class="nav-tag"><%= current_user.items.where(status: "published").count %></span></a></li>
						<li><a href="#drafts"><i class="far fa-file-alt"></i></i> Brouillons <span class="nav-tag"><%= current_user.items.where(status: "draft").count %></span></a></li>
						<li><a href="#sold"><i class="fas fa-handshake"></i> Objets vendus <span class="nav-tag"><%= current_user.items.where(status: "sold").count %></span></a></li>
					</ul>

					<!-- Tabs Content -->
					<div class="tabs-container">
						<div class="tab-content" id="published">
							<%= render "users/private_profile/sales/published"%>
						</div>
						<div class="tab-content" id="drafts">
							<%= render "users/private_profile/sales/drafts"%>
						</div>
						<div class="tab-content" id="sold">
							<%= render "users/private_profile/sales/sold"%>
						</div>
					</div>
				</div>
			</div>

	  	</div>

	</div>
</div>

<script type="text/javascript">

  $(document).ready(function() {
    $('footer').hide();
    $('.dashboard-nav li#seller').addClass('active');
  });
</script>