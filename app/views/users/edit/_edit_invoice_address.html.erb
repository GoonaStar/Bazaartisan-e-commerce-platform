<h2>Adresse de facturation</h2>

<div class=''>
  <div class="form-group form-inline row">
    <div class='col-3'>Nom</div>
    <%= f.text_field :invoice_entity, value: @user.invoice_entity, class:'form-control' %>
  </div>

  <div class="form-group form-inline row">
    <div class='col-3'>Rue</div>
    <div>
      <%= f.text_field :invoice_street, value: @user.invoice_street, class:'form-control' %><br/>
      <%= f.text_field :invoice_street2, value: @user.invoice_street2, class:'form-control' %>
    </div>
  </div>

  <div class="form-group form-inline row">
    <div class='col-3'>Code postal</div>
    <%= f.text_field :invoice_postcode, value: @user.invoice_postcode, class:'form-control col-2' %>
  </div>

  <div class="form-group form-inline row">
    <div class='col-3'>Ville</div>
    <%= f.text_field :invoice_city, value: @user.invoice_city, class:'form-control' %>
  </div>

  <div class="form-group form-inline row">
    <div class='col-3'>Pays</div>
    <%= f.text_field :invoice_country, value: @user.invoice_country, class:'form-control' %>
  </div>

  <div class="form-group form-inline row">
    <div class='col-3'>SIRET</div>
    <%= f.text_field :company_ID_number, value: @user.company_ID_number, class:'form-control' %>
  </div>

</div>