<% title(@user.first_name+' '+@user.last_name+' - Bazaartisan') %>

<div id="wrapper">
    <div class="container public-profile">

    	<!-- Titlebar -->
		<div id="titlebar" style="margin-top: 30px">
			<div class="row">
				<div class="col-md-12">
					<% if @user.avatar.attached? %>
						<div class="user-profile-avatar"><%= image_tag @user.avatar.variant(resize: "300x300") %></div>
					<% else %>
						<div class="user-profile-avatar"><%= image_tag 'image_profil_min.jpg' %></div>
					<% end %>
					<div class="user-profile-name">
						<h2><%= @user.first_name %> <%= @user.last_name %></h2>	
						<div class='personal_description'>
							<% if @user.personal_description != nil %>
								<%= @user.personal_description %>
							<% else %>
								<i><%= @user.first_name %> did not provide any information yet...</i>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>


		<div class="col-md-12">
			<div class="style-2">
				<!-- Tabs Navigation -->
				<ul class="tabs-nav" id='public-profile-tabs'>
					<li><a href="#orders"><i class='fa fa-shopping-basket'></i> His purchases <span class="nav-tag"><%= @user_orders.count %></span></a></li>
					<li><a href="#sales"><i class="fas fa-handshake"></i> His sales <span class="nav-tag"><%= @user_sales.count %></span></a></li>
					<li><a href="#adverts"><i class="fas fa-handshake"></i> His ads <span class="nav-tag"><%= @user_adverts.count %></span></a></li>
				</ul>

				<!-- Tabs Content -->
				<div class="tabs-container">
					<div class="tab-content" id="orders">
						<%= render "users/public_profile/orders"%>
					</div>
					<div class="tab-content" id="sales">
						<%= render "users/public_profile/sales"%>
					</div>
					<div class="tab-content" id="adverts">
						<%= render "users/public_profile/adverts"%>
					</div>
				</div>
			</div>
		</div>

    </div>
</div>