<div class="row">

	<!-- Statistic on current items online -->
	<div class="col-md-6">
	<%= link_to user_sales_path(current_user.id) do %>
			<div class="dashboard-stat color-1">
				<div class="dashboard-stat-content">
					<h4><%= @user_sales.where(status:'published').count %></h4>
					<span><%= pluralize(@user_sales.where(status:'published').count,'Ads','Ads').split(' ')[1] %> online</span>
				</div>
				<div class="dashboard-stat-icon"><i class="fa fa-eye"></i></div>
			</div>
	<% end %>
		</div>
	
	<!-- Item -->
	<div class="col-md-6">
		<div class="dashboard-stat color-3">
			<div class="dashboard-stat-content">
				<h4></h4> 
				<span>Sellers rating arrives soon on our platform</span>
			</div>
			<div class="dashboard-stat-icon"><i class="fa fa-star-half-alt"></i></div>
		</div>
	</div>

	<!-- Statistic on purchases -->

	<div class="col-md-6">
	<%= link_to user_orders_path(current_user.id) do %>
		<div class="dashboard-stat color-4">
			<div class="dashboard-stat-content">
				<h4><%= @user_orders.count %></h4> 
				<span><%= pluralize(@user_orders.count,'Objects','Objects').split(' ')[1] %> recycled</span>
			</div>
			<div class="dashboard-stat-icon"><i class="fa fa-tags"></i></div>
		</div>
	<% end %>
	</div>

	<!-- Item -->
	<div class="col-md-6">
		<div class="dashboard-stat color-2">
			<div class="dashboard-stat-content">
				<h4></h4>
				<span>Follow-up of your favorite sellers arrives soon on our platform</span>
			</div>
			<div class="dashboard-stat-icon"><i class="fa fa-bookmark"></i></div>
		</div>
	</div>
</div>