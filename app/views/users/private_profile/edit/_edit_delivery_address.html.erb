<!-- Form section to modify default delivery address -->
<div class='dashboard-list-box margin-top-0'>

  <h4 class='gray'>Delivery address</h4>

    <div class='dashboard-list-box-static'>
      <div class='my-profile'>

      <div class="form-group form-inline row mb-4">
        <%= f.label :delivery_entity, 'Name', class:'col-3 text-left' %>
        <%= f.text_field :delivery_entity, value: @user.delivery_entity, class:'form-control col-8 mb-0' %>
      </div>

      <div class="form-group form-inline row mb-4">
        <%= f.label :delivery_street, 'Street line 1', class:'col-3 text-left' %>
        <%= f.text_field :delivery_street, value: @user.delivery_street, class:'form-control col-8 mb-0' %>
      </div>

      <div class="form-group form-inline row mb-4">
        <%= f.label :delivery_street, 'Street line 2', class:'col-3 text-left' %>
        <%= f.text_field :delivery_street2, value: @user.delivery_street2, class:'form-control col-8 mb-0' %>
      </div>

      <div class="form-group form-inline row mb-4">
        <%= f.label :delivery_postcode, 'Zip code', class:'col-3 text-left' %>
        <%= f.text_field :delivery_postcode, value: @user.delivery_postcode, class:'form-control col-8 mb-0' %>
      </div>

      <div class="form-group form-inline row mb-4">
        <%= f.label :delivery_city, 'Citye', class:'col-3 text-left' %>
        <%= f.text_field :delivery_city, value: @user.delivery_city, class:'form-control col-8 mb-0' %>
      </div>

      <div class="form-group form-inline row mb-4">
        <%= f.label :delivery_country, 'Country', class:'col-3 text-left' %>
        <%= f.text_field :delivery_country, value: @user.delivery_country, class:'form-control col-8 mb-0' %>
      </div>

      <div class="form-inline row">
        <%= f.label :delivery_instructions, class:'col-sm-12 text-left' do %>Delivery instructions<i class="tip" data-tip-content="Precise, if necessary, your phone number for delivery"></i><% end %>
        <%= f.text_area :delivery_instructions, value: @user.delivery_instructions, class:'form-control col-sm-12' %>
      </div>
    </div>
  </div>
</div>