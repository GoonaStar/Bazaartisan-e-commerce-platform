<!-- Titlebar -->
<div id="titlebar">
	<div class="row">
		<div class="col-md-12">
			<h2>Mon profil</h2>
			<!-- Breadcrumbs -->
			<nav id="breadcrumbs">
				<ul>
    				<li><%= link_to "Accueil", root_path %></li>
					<li><%= link_to "Mon profil", user_path(current_user.id) %></li>
					<li><%= link_to "DÃ©tails du profil" %></li>
				</ul>
			</nav>
		</div>
	</div>
</div>

<!-- Tab contents -->
<div class='dashboard-list-box margin-top-0'>

	<!-- Form to update id information -->
	<div class='profile-section-content' id="personal" >
		<div class='row'>
		<%= form_for(current_user, url: user_path(current_user.id), html: { method: :put }) do |f| %>
			<%= render 'users/edit/edit_personal_info', f:f %>
			<%= render 'users/edit/edit_delivery_address', f:f %>
		</div>
	    <div class="margin-left-auto margin-right-auto">
      		<%= f.submit "Sauvegarder", class:'button margin-top-15' %>
		<% end %>
    	</div>
	</div>
	
	<!-- Form to update company information -->
	<div class='profile-section-content'  id="company" >
		<div class='row'>
		<%= form_for(current_user, url: user_path(current_user.id), html: { method: :put }) do |f| %>
			<%= render 'users/edit/edit_company_info', f:f %>
			<%= render 'users/edit/edit_invoice_address', f:f %>
		</div>
	    <div class="margin-left-auto margin-right-auto">
      		<%= f.submit "Sauvegarder", class:'button margin-top-15' %>
		<% end %>
    	</div>
	</div>


	<!-- Form to update password with devise, using UsersHelper -->
	<div class='profile-section-content' id="password" >
		<%= render 'devise/registrations/edit_password' %>
	</div>	
</div>