<% title('Dashboard - KraftMarket') %>

<%= render 'profile_header' %>

<div class='padding-top-0' id='dashboard'>

	<!-- Tabs to display profile section -->
	<%= render 'profile_tabs' %>

  	<div class="dashboard-content">
	
		<div class='profile-tab-content' id="personal-dashboard" >
	  		
	  		<!-- Titlebar -->
			<div id="titlebar">
				<div class="row">
					<div class="col-md-12">
						<h2>Bienvenue
							<% if current_user.first_name? %>
			                	<%= ' '+ current_user.first_name %>
							<% end %> !
			            </h2>
						<!-- Breadcrumbs -->
						<nav id="breadcrumbs" class='text-right'>
							<ul>
			    				<li><%= link_to "Accueil", root_path %></li>
								<li><%= link_to "Mon profil", user_path(current_user.id) %></li>
								<li><%= link_to "Tableau de bord", user_path(current_user.id) %></li>
							</ul>
						</nav>
					</div>
				</div>
			</div>

	  		<%= render 'users/show/dashboard' %>
	  	</div>

	</div>
</div>

<%= render 'profile_footer' %>

<script type="text/javascript">

  $(document).ready(function() {
    $('footer').hide();
app/views/items/item_edit/_titlebar.html.erb    $('.dashboard-nav li#profile_dashboard').addClass('active');
  });
</script>