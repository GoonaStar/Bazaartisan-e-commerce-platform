<% title('Inscription - KraftMarket') %>


<div id="wrapper">
  <!-- Titlebar -->
  <div id="titlebar" class='gradient'>
    <div class='container'>
      <div class="row">
        <div class="col-md-12">
          <h2>Inscription</h2>
          <!-- Breadcrumbs -->
          <nav id="breadcrumbs">
            <ul>
              <li><%= link_to "Accueil", root_path %></li>
              <li><%= link_to "Inscription", new_registration_path(resource_name) %></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>


  <div class='container'>
    <div class='d-flex align-items-center flex-column add-listing-section padding-bottom-0 margin-bottom-15'>
      <div class="devise_signup with_forms">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :prénom %><br />
            <%= f.text_field :first_name, autofocus: true %>
          </div>

          <div class="field">
            <%= f.label :nom %><br />
            <%= f.text_field :last_name, autofocus: true %>
          </div>

          <div class="field  form-inline">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field  form-inline">
            <%= f.label :password, "Mot de passe" %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> caractères minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field  form-inline">
            <%= f.label :'Confirmez votre mot de passe' %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :siret, "Numéro de SIRET " %><em>(optionnel)</em><br>
            <%= f.text_field :company_ID_number, autofocus: true %>
          </div>
          
          <div class="submit-section">
            <%= f.label :image, "Image de profil " %><em>(optionnel)</em><br>
            <%= f.file_field :avatar %>
          </div>

          

          <div class="actions d-flex justify-content-center margin-top-25">
            <%= f.submit "S'inscrire" %>
          </div>
        <% end %>

        <div class="margin-top-25">
          <span class='lost_password'>
            <%- if controller_name != 'sessions' %>
              <%= link_to "Déjà inscrit ? Connectez-vous", new_session_path(resource_name) %><br />
            <% end -%>
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
