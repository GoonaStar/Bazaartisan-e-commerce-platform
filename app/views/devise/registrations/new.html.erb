<% title('Register - Bazzartisan') %>


<div id="wrapper">
  <!-- Titlebar -->
  <div id="titlebar" class='gradient'>
    <div class='container'>
      <div class="row">
        <div class="col-md-12">
          <h2>Register</h2>
          <!-- Breadcrumbs -->
          <nav id="breadcrumbs">
            <ul>
              <li><%= link_to "Home", root_path %></li>
              <li><%= link_to "Register", new_registration_path(resource_name) %></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>


  <div class='container'>
    <div class='add-listing-section margin-bottom-15 padding-top-15'>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class='row d-flex flex-column'>

            <div class='offset-md-3 col-md-6 col-sm-12'>
            <% if params['attributes'] %>
            <% end %>
              <div class="field form-inline form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

              <div class="field form-inline form-group">
                <%= f.label :password, "Password  " %>
                <% if @minimum_password_length %>
                   <i class="tip" data-tip-content='<%= @minimum_password_length.to_s %> caractères minimum' ></i>
                <% end %>
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>

              <div class="field form-inline form-group">
                <%= f.label :'Confirm your password' %>
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
              </div>

              <div class="field form-inline">
                <%= f.label :prénom, "First name" %><br />
                <%= f.text_field :first_name, autofocus: true %>
              </div>

              <div class="field form-inline">
                <%= f.label :nom, "Last name" %><br />
                <%= f.text_field :last_name, autofocus: true %>
              </div>

              <div class="submit-section">
                <%= f.label :image, "Profile picture " %><em>(optionnel)</em><br>
                <%= f.file_field :avatar %>
              </div>

            <% if params['attributes'] %>
              </div>
              <%= render 'users/new/siret_params', attributes:params['attributes'], f:f %>
            <% end %>

          </div>
          


          

          <div class="actions d-flex justify-content-center margin-top-25">
            <%= f.submit "S'inscrire" %>
          </div>
        <% end %>

        <span class='lost_password margin-top-15'>
          <%- if controller_name != 'sessions' %>
            <%= link_to "Déjà inscrit ? Connectez-vous", new_session_path(resource_name) %><br />
          <% end -%>
        </span>


    </div>
  </div>
</div>
