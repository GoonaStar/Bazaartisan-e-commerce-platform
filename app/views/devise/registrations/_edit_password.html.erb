<!-- Form section to modify personal info -->
<div class='col-md-8 offset-md-2 col-sm-12'>
  <div class='dashboard-list-box margin-top-0'>
    <h4 class='gray'>Edition de votre mot de passe</h4>
    <div class='dashboard-list-box-static'>
      <div class='my-profile'>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put , class:'d'}) do |f| %>
        <%= devise_error_messages! %>

        <%= f.hidden_field :email, value: @user.email, class:'form-control' %>

        <div class="form-group form-inline row mb-4">
          <%= f.label :first_name, 'Ancien mot de passe', class:'col-4 margin-top-0' do %>Ancien mot de passe<% end %>
          <%= f.password_field :current_password, autocomplete: "current-password", class:'col-8 form-control mb-0' %>
        </div>

        <div class="form-group form-inline row mb-4">
          <%= f.label :password, class:'col-4 margin-top-0' do %>Nouveau mot de passe
            <% if @minimum_password_length %>
              <i class="tip" data-tip-content=<%= @minimum_password_length +' caractÃ¨res minimum'%>></i>
            <% end %>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class:'col-8 form-control mb-0' %>
        </div>
        

        <div class="form-inline row">
          <%= f.label :password_confirmation, 'Confirmation', class:'col-4 margin-top-0' %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:'col-8 form-control mb-0' %>
        </div>

      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <%= f.submit "Modifier mon mot de passe", class:'button margin-top-15' %>
  </div>
<% end %>
</div>