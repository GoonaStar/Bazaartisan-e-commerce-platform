<% title('Forgotten password - Bazaartisan') %>

<div id="wrapper">
  <!-- Titlebar -->
  <div id="titlebar" class='gradient'>
    <div class='container'>
      <div class="row">
        <div class="col-md-12">
          <h2>Password forgotten? </h2>
          <!-- Breadcrumbs -->
          <nav id="breadcrumbs">
            <ul>
              <li><%= link_to "Home", root_path %></li>
              <li><%= link_to "Password forgotten?", new_registration_path(resource_name) %></li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>

  <div class='container'>
    <div class='d-flex align-items-center flex-column add-listing-section padding-bottom-0 margin-bottom-15'>
      <div class="devise_signup with_forms">

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="field form-inline">
			    <%= f.label :email, "Email" %><br />
			    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
			  </div>

			  <div class="actions  d-flex justify-content-center ">
			    <%= f.submit "Reset your password" %>
			  </div>
			<% end %>
		</div>
	</div>
	</div>
</div>

