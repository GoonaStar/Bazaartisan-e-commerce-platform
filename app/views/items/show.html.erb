<% title(@item.title+' - KraftMarket') %>

<div id="wrapper">
    <div id="titlebar" class="gradient">
    	<div class="container">
    	    <div class="row">
    	    	<div class="col-md-12">
    	    		<!-- Breadcrumbs -->
    	    		<nav id="breadcrumbs">
    	    			<ul>
    	    				<li><%= link_to "Accueil", root_path %></li>
    	    				<li><%= link_to "Produits", items_path %></li>
                            <li><%= link_to @item.category.category_name, items_path(item_filter:{category_id: @item.category_id}) %></li>
                            <li><%= link_to @item.title, item_path(@item.id) %></li>
    	    			</ul>
    	    		</nav>
    	    	</div>
    	    </div>
    	</div>
    </div>

    <div class="container">
        <div class="row">
        	<div class="col-lg-12">
        		<div id="add-listing" class="separated-form">
                    <div class="add-listing-section">
        				<div class="add-listing-headline">
        					<h3><%= @item.title %>, article vendu par <%= User.find(@item.seller_id).first_name %><i class="tip" data-tip-content="<%= User.find(@item.seller_id).first_name %> a déjà vendu sur Kraft Market"></i></h3>
        				</div>
                        <div class="col-md-4">
                            <h5>Image principale de l'article:</h5>
                            <% if @item.item_images.attached? %>
                                <%= image_tag @item.item_images[0].variant(resize: "300x300") %>
                                <% else %> 
                                <%= image_tag '/assets/generique/no-image.jpg' %>
                            <% end %>
                        </div>
                        <div class="col-md-8">                        
                            <p><h5>Description:</h5> <%= @item.description%></p>
                            <p><h5>Prix:</h5> <%= @item.price%> €</p>
                        </div>
                        <p>
                            <%= button_to "Réserver l'article", carts_path(item_id:@item.id), method: :post, class:"btn btn-primary" %>
                        </p>
        			</div>
                </div>
        	</div>
        </div>
    </div>
</div>