<div class="col-lg-2 col-md-3">
	<div class="sidebar">

		<!-- Widget -->
		<div class="widget margin-bottom-40">
			<h3 class="margin-top-0 margin-bottom-30">Filtres</h3>

			<div>
			    <%= form_for :search_form, url: items_path, method: :get do |f| %>
			    	<div class='row with-forms'>
			        <%= f.collection_select(:category_id, Category.all, :id, :category_name, {class:"chosen-select"}) %>
			    	</div>

			    	<%= f.button type: :submit, class:"button fullwidth margin-top-10" do %>
			    	Recherche
			    	<% end %> 
			    <% end %>
			</div>


		</div>
		<!-- Widget / End -->
	</div>
</div>
