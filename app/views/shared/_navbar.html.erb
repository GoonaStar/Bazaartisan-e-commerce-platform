<header class="navbar sticky-top navbar-expand-lg navbar-light bg-light">

  <nav class='container d-flex justify-content-between align-items-center'>

    <div class="w-100 left-part">

      <div id='logo' class='navbar-brand margin-top-0'>
        <%= link_to root_path do %>
          <%= image_tag "logo-kraft", style: "height: 50px"%>
        <% end %>
      </div>
   
      <div class='text-right toggle-div'>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#myNavbar" aria-expanded="false">
          <span class="navbar-toggler-icon"></span>
        </button>
      </div>
    </div>

    <div class="collapse navbar-collapse flex-grow-1 text-right" id="myNavbar">
      <ul class="navbar-nav ml-auto flex-nowrap">

        <!-- Button to promote selling -->
          <li class="nav-item text-nowrap">
            <% if user_signed_in? && current_user.is_seller %>
              <%= button_to new_item_path, method: :get, class: "button" do %>
                <i class="fas fa-plus-square"></i> Nouvelle annonce
              <% end %>
            <% else %>
              <%= button_to "Devenez ravitailleur", home_seller_path, method: :get, class: "button" %>
            <% end %>
         </li>

        <!-- Button to promote items -->
          <li class="nav-item text-nowrap">
            <% if user_signed_in? && current_user.is_buyer %>
              <%= link_to "Parcourir les matières", items_path, class: "nav-link" %>
            <% else %>
              <%= link_to "Découvrir les matières", items_path, class: "nav-link" %>
            <% end %>
          </li>

        <!-- Profile dropdown if signed-in or signin -->

          <% if user_signed_in? %>

            <li class="nav-item dropdown text-nowrap">
               <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Mon compte</a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                <%= link_to user_path(current_user.id), class:"dropdown-item" do %>
                  <i class="fa fa-folder-open"></i> Mes annonces
                <% end %>
                <%= link_to user_path(current_user.id), class:"dropdown-item" do %>
                  <i class="fa fa-shopping-cart"></i> Mes commandes
                <% end %>
                <%= link_to user_path(current_user.id),  class:"dropdown-item" do %>
                  <i class="fa fa-user-edit"></i> Mon profil
                <% end %>
                <%= link_to destroy_user_session_path, method: :delete, class:"dropdown-item" do %>
                  <i class="fa fa-sign-out-alt"></i> Déconnexion
                <% end %>
              </div>
            </li>
          <% else %>
  
            <li class="nav-item text-nowrap">
                <%= link_to "Le concept", about_path, :class =>"nav-link" %>
            </li>
            <li class="nav-item text-nowrap">
              <%= link_to "Connexion", new_user_session_path,  :class =>"nav-link" %>
            </li>
  
          <% end %>

      <!-- Display cart if user signed in -->
        <% if user_signed_in? %>
          <li class="nav-item cart">
						<%= link_to cart_path(current_user.cart.id), class:"button_cart" do %>
							<% if Item.find_by(cart_id: current_user.cart.id) == nil %>
								<%= image_tag 'cart-icon/empty', style: "width: 35px; height: 35px" %>
							<%else%>
								<!-- Esthétique du panier quand une réservation est faite ! -->
								<%= image_tag 'cart-icon/full', style: "width: 35px; height: 35px" %>
							<%end%>
						<% end %>	
					</li>
        <% end %>

      </ul>
    </div>
  </nav>
</header>

 